{
  "manifest_version": 3,
  "name": "Thunderbit (Clone)",
  "version": "0.1.0",
  "description": "Base MV3 clone with in-page panel, capture, storage and export.",
  "action": { "default_popup": "popup.html" },
  "background": { "service_worker": "background.js", "type": "module" },
  "permissions": ["storage", "scripting", "tabs", "activeTab", "downloads"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["scrapers.js", "content_panel.js"],
      "run_at": "document_idle"
    }
  ]
}
