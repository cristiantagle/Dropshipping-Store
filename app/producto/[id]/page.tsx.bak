"use client";
import { getProductById } from "@/lib/products";
import { useCart } from "@/components/useCart";

export default async function ProductoPage({ params }: { params: { id: string } }) {
  const producto = await getProductById(params.id);
  const { add: agregarAlCarro } = useCart();

  return (
    <main className="mx-auto max-w-6xl px-4 sm:px-6 py-12">
      <div className="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div className="aspect-[4/3] w-full bg-gray-100 rounded-xl overflow-hidden">
          <img
            src={producto?.imagen || "/lunaria-icon.png"}
            alt={producto?.nombre || "Producto"}
            className="w-full h-full object-cover"
            loading="lazy"
            decoding="async"
            referrerPolicy="no-referrer"
          />
        </div>
        <div>
          <h1 className="text-2xl font-bold mb-4">{producto?.nombre}</h1>
          <p className="text-gray-600 mb-6">{producto?.descripcion || "Sin descripci√≥n"}</p>
          <button
            onClick={() => agregarAlCarro(producto)}
            className="px-4 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition"
          >
            Agregar al carro
          </button>
        </div>
      </div>
    </main>
  );
}
